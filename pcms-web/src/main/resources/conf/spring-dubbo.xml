<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
 xsi:schemaLocation="http://www.springframework.org/schema/beans  
        http://www.springframework.org/schema/beans/spring-beans.xsd  
        http://code.alibabatech.com/schema/dubbo  
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd  
        ">
 <!-- consumer application name -->
 <!-- 消费者名称 -->
 <dubbo:application name="consumer_sms_message" />
 <!-- 消费地址 -->
 <dubbo:registry address="zookeeper://172.18.10.76:2181"/>
 <!-- 消费时间 -->
 <dubbo:consumer timeout="5000" />
 <!-- 消费接口 -->
 <dubbo:reference id="messageService" check="false" interface="com.pujjr.message_api.service.IMessageService" />
 
 <!-- 短信发送回调服务配置 -->
 <bean id="messageCallbackService"  class="com.pujjr.sms.service.impl.MessageCallbackServiceImpl" />
  <!-- 用dubbo协议在30880端口暴露服务 -->
 <dubbo:protocol name="dubbo" port="30881" />
 <!-- 声明需要暴露的服务接口 -->
 <dubbo:service interface="com.pujjr.message_api.service.IMessageCallbackService" ref="messageCallbackService" />
 
 <!-- 征信测试配置 -->
   <!-- 
 <dubbo:registry id="credit_registry" address="zookeeper://172.18.13.112:2181" />
  -->
  <dubbo:registry id="credit_registry" address="zookeeper://172.18.10.76:2181" />
 <dubbo:reference interface="com.pujjr.pcci.api.service.CreditApi" id="creditService" check="false"  registry="credit_registry" timeout="60000" retries="0" group="pcci"/>
	
</beans>